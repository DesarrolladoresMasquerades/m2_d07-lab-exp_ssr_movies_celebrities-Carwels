<h2>Movie details</h2>

<h4>{{title}}</h4>
  <hr />
<p>{{genre}}</p>
  <hr />
<p>{{plot}}</p>
  <hr />
<p>Cast:</p>
  <hr />
{{#each cast}}
    <div>
        <h6>{{name}}</h6>

        <p>{{occupation}}</p>

        <p>{{catchPhrase}}</p>
    </div>
{{/each}}

<form action="/movies/{{_id}}/delete" method="POST">
<br>
<button type="submit"> Delete Movie </button>
</form>
<br>
<a href="/movies/{{_id}}/edit">Edit</a>
<br>
<a href="/movies">Go back</a>